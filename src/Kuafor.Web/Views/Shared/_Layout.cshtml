@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="X-Frame-Options" content="DENY" />
    <meta http-equiv="X-XSS-Protection" content="1; mode=block" />
    <title>@Html.Raw(Html.Encode(ViewData["Title"])) - Kuaför</title>
    <base href="~/" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Kuafor.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <partial name="_Navbar" />
    <main class="py-4">
        @RenderBody()
    </main>
    <partial name="_Footer" />
    <!-- Modals -->
    <partial name="~/Views/Account/_LoginModal.cshtml"
             model="new Kuafor.Web.ViewModels.LoginViewModel()" />
    <partial name="~/Views/Account/_RegisterModal.cshtml"
             model="new Kuafor.Web.ViewModels.RegisterViewModel()" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    @if (TempData["OpenModal"]?.ToString() == "Login")
    {
        <script>new bootstrap.Modal('#loginModal').show();</script>
    }
    else if (TempData["OpenModal"]?.ToString() == "Register")
    {
        <script>new bootstrap.Modal('#registerModal').show();</script>
    }
    @await Html.PartialAsync("_Toast")
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/toast.js" asp-append-version="true"></script>
    <script src="~/js/datetime-locale.js" asp-append-version="true"></script>
    
    <!-- WhatsApp Widget - Ana sayfa ve müşteri sayfalarında göster -->
    @if (!ViewContext.RouteData.Values.ContainsKey("area") || ViewContext.RouteData.Values["area"]?.ToString() == "Customer")
    {
        @await Component.InvokeAsync("WhatsAppWidget")
    }
</body>
</html>
