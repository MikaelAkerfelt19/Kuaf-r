@{
    var ok = TempData["Success"] as string;
    var err = TempData["Error"] as string;
}
<div aria-live="polite" aria-atomic="true" class="position-fixed top-0 end-0 p-3" style="z-index:1080">
    @if (!string.IsNullOrWhiteSpace(ok))
    {
        <div class="toast align-items-center text-bg-success border-0 mb-2" role="alert" data-bs-delay="4000">
            <div class="d-flex">
                <div class="toast-body">@ok</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
                    aria-label="Kapat"></button>
            </div>
        </div>
    }
    @if (!string.IsNullOrWhiteSpace(err))
    {
        <div class="toast align-items-center text-bg-danger border-0 mb-2" role="alert" data-bs-delay="6000">
            <div class="d-flex">
                <div class="toast-body">@err</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
                    aria-label="Kapat"></button>
            </div>
        </div>
    }
</div>
