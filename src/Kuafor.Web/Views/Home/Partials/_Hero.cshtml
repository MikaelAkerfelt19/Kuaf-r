@model Kuafor.Web.Models.HomeViewModel

<div class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Profesyonel Kuaförlük Hizmetleri</h1>
                <p class="lead mb-4">
                    Modern teknikler ve deneyimli kadromuzla size en iyi hizmeti sunuyoruz. 
                    Saç kesimi, boyama, bakım ve daha fazlası için hemen randevu alın.
                </p>
                <div class="d-flex gap-3">
                    @if (Model.IsAuthenticated)
                    {
                        <a class="btn btn-warning btn-lg" asp-controller="Appointments" asp-action="New">
                            <i class="fas fa-calendar-plus me-2"></i>Hemen Randevu Al
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-warning btn-lg" data-bs-toggle="modal" data-bs-target="#loginModal">
                            <i class="fas fa-calendar-plus me-2"></i>Hemen Randevu Al
                        </button>
                    }
                    <a class="btn btn-outline-light btn-lg" href="#services">
                        <i class="fas fa-info-circle me-2"></i>Hizmetlerimiz
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <img src="https://images.unsplash.com/photo-1560066984-138dadb4c035?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                     alt="Profesyonel Kuaförlük" class="img-fluid rounded">
            </div>
        </div>
    </div>  
</div>
