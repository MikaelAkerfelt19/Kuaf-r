@model IEnumerable<Kuafor.Web.Models.Entities.Service>
<section id="services" class="py-5 bg-light">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="display-5 fw-bold text-dark mb-3">Hizmetlerimiz</h2>
      <p class="lead text-muted">Profesyonel kadromuz ve modern tekniklerle size en iyi hizmeti sunuyoruz</p>
      <div class="divider mx-auto bg-primary"></div>
    </div>
    
    <div class="row g-4">
      @foreach (var s in Model.OrderBy(x => x.DisplayOrder))
      {
        <div class="col-lg-4 col-md-6">
          <div class="service-card h-100 bg-white rounded-4 shadow-sm border-0 overflow-hidden position-relative">
            <div class="service-icon-wrapper text-center py-4 bg-gradient-primary">
              <i class="@s.IconClass text-white fs-1"></i>
            </div>
            <div class="card-body p-4">
              <h3 class="h5 fw-bold mb-3 text-dark">@s.Name</h3>
              <p class="text-muted mb-3">@s.Description</p>
              
              <div class="service-details">
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <span class="text-muted small">Süre:</span>
                  <span class="fw-semibold">@s.DurationMin dk</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                  <span class="text-muted small">Fiyat:</span>
                  @if (s.PriceFrom.HasValue)
                  {
                      <span class="fw-bold text-primary">@s.PriceFrom₺'den başlayan fiyatlar</span>
                  }
                  else if (s.Price > 0)
                  {
                      <span class="fw-bold text-primary">@s.Price₺</span>
                  }
                  else
                  {
                      <span class="fw-bold text-success">Ücretsiz</span>
                  }
                </div>
              </div>
              
              <div class="mt-4">
                @if (ViewContext.HttpContext.User.Identity?.IsAuthenticated == true)
                {
                    <a href="/Appointments/New?serviceId=@s.Id" class="btn btn-primary w-100">
                      <i class="fas fa-calendar-plus me-2"></i>Randevu Al
                    </a>
                }
                else
                {
                    <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#loginModal">
                      <i class="fas fa-calendar-plus me-2"></i>Randevu Al
                    </button>
                }
              </div>
            </div>
          </div>
        </div>
      }
    </div>
    
    @if (!Model.Any())
    {
        <div class="text-center py-5">
          <div class="empty-state">
            <i class="fas fa-scissors text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3 text-muted">Henüz hizmet eklenmemiş</h4>
            <p class="text-muted">Admin panelinden hizmetler eklenebilir.</p>
          </div>
        </div>
    }
  </div>
</section>

<style>
.bg-gradient-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.service-card {
  transition: all 0.3s ease;
  border: 1px solid rgba(0,0,0,0.05);
}

.service-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(0,0,0,0.1) !important;
}

.service-icon-wrapper {
  position: relative;
  overflow: hidden;
}

.service-icon-wrapper::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255,255,255,0.1);
  transform: translateX(-100%);
  transition: transform 0.3s ease;
}

.service-card:hover .service-icon-wrapper::before {
  transform: translateX(100%);
}

.divider {
  width: 60px;
  height: 3px;
  border-radius: 2px;
}

.empty-state {
  padding: 3rem 1rem;
}
</style>
