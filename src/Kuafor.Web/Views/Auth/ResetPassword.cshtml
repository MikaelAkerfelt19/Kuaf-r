@model Kuafor.Web.Models.Account.ResetPasswordViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Şifre Sıfırlama - Yeni Şifre";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <h3 class="mb-3">Yeni Şifre</h3>
            <form asp-action="ResetPassword" method="post">
                <input type="hidden" asp-for="Sid" />
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>
                <button class="btn btn-success w-100" type="submit">Şifreyi Güncelle</button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
