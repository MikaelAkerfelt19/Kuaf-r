@model Kuafor.Web.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
    // Login sayfası açıldığında otomatik olarak login modalını göster
    TempData["OpenModal"] = "Login";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h2 class="mb-4">Giriş Yap</h2>
            <p class="mb-4">Giriş yapmak için lütfen modal penceresini kullanın.</p>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#loginModal">
                <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
            </button>
            <div class="mt-3">
                <span class="text-muted">Hesabınız yok mu?</span>
                <button class="btn btn-link" data-bs-toggle="modal" data-bs-target="#registerModal">Kayıt Ol</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Sayfa yüklendiğinde login modalını otomatik olarak aç
        document.addEventListener('DOMContentLoaded', function() {
            new bootstrap.Modal('#loginModal').show();
        });
    </script>
}