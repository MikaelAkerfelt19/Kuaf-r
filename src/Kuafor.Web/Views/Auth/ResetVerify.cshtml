@model Kuafor.Web.Models.Account.ResetVerifyViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Şifre Sıfırlama - Doğrulama";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <h3 class="mb-3">Telefon Doğrulaması</h3>
            <p class="text-muted">Telefonunuza gönderilen 6 haneli kodu giriniz. <strong id="timer">05:00</strong></p>
            <form asp-action="ResetVerify" method="post">
                <input type="hidden" asp-for="Sid" />
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>
                <div class="mb-3">
                    <label asp-for="Code" class="form-label"></label>
                    <input asp-for="Code" class="form-control" maxlength="6" inputmode="numeric" />
                    <span asp-validation-for="Code" class="text-danger small"></span>
                </div>
                <button class="btn btn-primary w-100" type="submit">Doğrula</button>
            </form>
            <div class="text-muted mt-2 small">Kodun süresi dolarsa baştan başlayın.</div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Basit 5 dk geri sayım
        let remaining = 5*60;
        const el = document.getElementById('timer');
        const iv = setInterval(() => {
          const m = String(Math.floor(remaining/60)).padStart(2,'0');
          const s = String(remaining%60).padStart(2,'0');
          el.textContent = `${m}:${s}`;
          if(--remaining < 0) clearInterval(iv);
        }, 1000);
    </script>
}
