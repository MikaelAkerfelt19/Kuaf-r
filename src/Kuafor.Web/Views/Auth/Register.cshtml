@model Kuafor.Web.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
    // Register sayfası açıldığında otomatik olarak register modalını göster
    TempData["OpenModal"] = "Register";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h2 class="mb-4">Kayıt Ol</h2>
            <p class="mb-4">Kayıt olmak için lütfen modal penceresini kullanın.</p>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#registerModal">
                <i class="fas fa-user-plus me-2"></i>Kayıt Ol
            </button>
            <div class="mt-3">
                <span class="text-muted">Zaten hesabınız var mı?</span>
                <button class="btn btn-link" data-bs-toggle="modal" data-bs-target="#loginModal">Giriş Yap</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Sayfa yüklendiğinde register modalını otomatik olarak aç
        document.addEventListener('DOMContentLoaded', function() {
            new bootstrap.Modal('#registerModal').show();
        });
    </script>
}