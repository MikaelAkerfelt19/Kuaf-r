@model Kuafor.Web.Models.Appointments.AppointmentWizardViewModel
<div class="mb-3"><a class="btn btn-link" href="@Url.Action("New", "Appointments")">← Geri: Hizmet</a></div>
<div class="row g-3">
    @foreach (var st in Model.Stylists)
    {
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="fw-semibold">@st.Name</div>
                    <div class="text-muted small">Puan: @st.Rating</div>
                    <p class="mt-2 text-muted">@st.Bio</p>
                    <div class="mt-auto">
                        <a class="btn btn-primary" href="@Url.Action("New", "Appointments", new { serviceId = Model.SelectedServiceId, stylistId = st.Id })">Seç ve Devam Et</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>