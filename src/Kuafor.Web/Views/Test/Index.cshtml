@{
    ViewData["Title"] = "Test Sayfası";
}

<div class="container mt-4">
    <h2>Test Sayfası Çalışıyor!</h2>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Controller Test</h5>
                </div>
                <div class="card-body">
                    <p class="text-success">✅ Controller başarıyla çalışıyor</p>
                    <p class="text-success">✅ View başarıyla render ediliyor</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Şu Anki Durum</h5>
                </div>
                <div class="card-body">
                    <p><strong>Tarih:</strong> @DateTime.Now.ToString("dd.MM.yyyy")</p>
                    <p><strong>Saat:</strong> @DateTime.Now.ToString("HH:mm:ss")</p>
                    <p><strong>Durum:</strong> <span class="badge bg-success">Çalışıyor</span></p>
                </div>
            </div>
        </div>
    </div>
</div>
