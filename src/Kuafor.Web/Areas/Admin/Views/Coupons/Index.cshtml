@model List<Kuafor.Web.Models.Admin.Coupons.CouponDto>
@using Kuafor.Web.Models.Admin.Coupons
@{
    ViewData["Title"] = "Kuponlar";
    Func<CouponDto, string> typeBadge = c => c.DiscountType == DiscountType.Percent ? "%" : "₺";
    Func<DateTime?, string> dateFmt = d => d.HasValue ? d.Value.ToString("yyyy-MM-dd") : "-";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Kuponlar</h2>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#couponModal"
        data-mode="create">Yeni Kupon</button>
</div>

@if (TempData["Success"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ok
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
    </div>
}
@if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @err
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
    </div>
}

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:80px">#</th>
                        <th style="width:150px">Kod</th>
                        <th>Başlık</th>
                        <th style="width:120px">Tip</th>
                        <th style="width:140px">Tutar</th>
                        <th style="width:150px">Asgari Harcama</th>
                        <th style="width:150px">Son Kullanım</th>
                        <th style="width:120px">Durum</th>
                        <th style="width:180px" class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted py-4">Kayıt bulunamadı.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var c in Model)
                        {
                            <tr>
                                <td>@c.Id</td>
                                <td><code>@c.Code</code></td>
                                <td>@c.Title</td>
                                <td>
                                    <span class="badge bg-info">@typeBadge(c)</span>
                                </td>
                                <td>
                                    @if (c.DiscountType == DiscountType.Percent)
                                    {
                                        @($"{c.Amount:0.##} %")
                                    }
                                    else
                                    {
                                        @($"{c.Amount:0.##} ₺")
                                    }
                                </td>
                                <td>@(c.MinSpend.HasValue ? $"{c.MinSpend:0.##} ₺" : "-")</td>
                                <td>@dateFmt(c.ExpiresAt)</td>
                                <td>
                                    @if (c.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <button type="button" class="btn btn-sm btn-outline-primary me-1" data-bs-toggle="modal"
                                        data-bs-target="#couponModal" data-mode="edit" data-id="@c.Id" data-code="@c.Code"
                                        data-title="@c.Title" data-type="@((int)c.DiscountType)" data-amount="@c.Amount"
                                        data-minspend="@(c.MinSpend?.ToString("0.##") ?? "")"
                                        data-expires="@((c.ExpiresAt.HasValue ? c.ExpiresAt.Value.ToString("yyyy-MM-dd") : ""))"
                                        data-active="@(c.IsActive ? "true" : "false")">
                                        Düzenle
                                    </button>

                                    <form method="post" action="/Admin/Coupons/Delete" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@c.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                            Sil
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@await Html.PartialAsync("Partials/_CouponModal", new Kuafor.Web.Models.Admin.Coupons.CouponFormModel())

@section Scripts {
    <script src="~/js/admin-coupons.js" asp-append-version="true"></script>
}
