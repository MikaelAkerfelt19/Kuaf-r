@model IEnumerable<Kuafor.Web.Models.Entities.Receipt>

@{
    ViewData["Title"] = "Adisyon Yönetimi";
    Layout = "_Layout.Admin";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Adisyon Yönetimi</h1>
        <div>
            <a href="@Url.Action("CreateForRegistered")" class="btn btn-primary me-2">
                <i class="fas fa-user-plus"></i> Kayıtlı Müşteri
            </a>
            <a href="@Url.Action("CreateForNew")" class="btn btn-success">
                <i class="fas fa-user"></i> Yeni Müşteri
            </a>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Adisyon Listesi</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Müşteri</th>
                            <th>Toplam Tutar</th>
                            <th>Ödenen</th>
                            <th>Kalan</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var receipt in Model)
                            {
                                <tr>
                                    <td>@receipt.Id</td>
                                    <td>
                                        @if (receipt.Customer != null)
                                        {
                                            <strong>@receipt.Customer.FirstName @receipt.Customer.LastName</strong><br>
                                            <small class="text-muted">@receipt.Customer.Phone</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Misafir Müşteri</span>
                                        }
                                    </td>
                                    <td>@receipt.TotalAmount.ToString("C")</td>
                                    <td>@receipt.PaidAmount.ToString("C")</td>
                                    <td>
                                        @if (receipt.RemainingAmount > 0)
                                        {
                                            <span class="text-danger">@receipt.RemainingAmount.ToString("C")</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">₺0,00</span>
                                        }
                                    </td>
                                    <td>@receipt.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        @if (receipt.RemainingAmount <= 0)
                                        {
                                            <span class="badge bg-success">Ödendi</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Beklemede</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", new { id = receipt.Id })" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i> Detay
                                        </a>
                                        @if (receipt.RemainingAmount > 0)
                                        {
                                            <button type="button" class="btn btn-sm btn-success" onclick="markAsPaid(@receipt.Id)">
                                                <i class="fas fa-check"></i> Ödendi
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-4">
                                    <i class="fas fa-receipt fa-2x mb-2"></i><br>
                                    Henüz adisyon oluşturulmamış
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
function markAsPaid(id) {
    if (confirm('Bu adisyonu ödendi olarak işaretlemek istediğinizden emin misiniz?')) {
        fetch('/Admin/Adisyon/MarkAsPaid/' + id, {
            method: 'POST',
            headers: {
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('İşlem başarısız: ' + data.message);
            }
        });
    }
}
</script>
