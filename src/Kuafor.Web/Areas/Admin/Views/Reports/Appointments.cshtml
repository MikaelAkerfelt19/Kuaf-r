@model Kuafor.Web.Models.Admin.Reports.AppointmentReport
@{
    ViewData["Title"] = "Randevu Raporu";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h2 class="mb-0">Randevu Raporu</h2>
    <div class="d-flex gap-2">
        <button type="button" class="btn btn-outline-primary" onclick="exportReport('excel')">
            <i class="fas fa-file-excel"></i> Excel
        </button>
        <button type="button" class="btn btn-outline-danger" onclick="exportReport('pdf')">
            <i class="fas fa-file-pdf"></i> PDF
        </button>
        <button type="button" class="btn btn-outline-secondary" onclick="exportReport('csv')">
            <i class="fas fa-file-csv"></i> CSV
        </button>
    </div>
</div>

<!-- Tarih Filtreleri -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="from" class="form-label">Başlangıç Tarihi</label>
                <input type="date" class="form-control" id="from" name="from" value="@ViewBag.FromDate?.ToString("yyyy-MM-dd")">
            </div>
            <div class="col-md-4">
                <label for="to" class="form-label">Bitiş Tarihi</label>
                <input type="date" class="form-control" id="to" name="to" value="@ViewBag.ToDate?.ToString("yyyy-MM-dd")">
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="fas fa-search"></i> Filtrele
                </button>
                <a href="@Url.Action("Appointments")" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Temizle
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Özet Kartları -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="text-muted mb-2">Toplam Randevu</div>
                <div class="display-6 fw-bold text-primary">@Model.TotalAppointments</div>
                <small class="text-muted">@Model.Period</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="text-muted mb-2">Tamamlanan</div>
                <div class="display-6 fw-bold text-success">@Model.CompletedAppointments</div>
                <small class="text-muted">Adet</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="text-muted mb-2">İptal Edilen</div>
                <div class="display-6 fw-bold text-danger">@Model.CancelledAppointments</div>
                <small class="text-muted">Adet</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="text-muted mb-2">Gelmeyenler</div>
                <div class="display-6 fw-bold text-warning">@Model.NoShowAppointments</div>
                <small class="text-muted">Adet</small>
            </div>
        </div>
    </div>
</div>

<!-- İstatistikler -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="text-muted mb-2">Onaylanan Randevular</div>
                <div class="display-6 fw-bold text-info">@Model.ConfirmedAppointments</div>
                <small class="text-muted">Adet</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="text-muted mb-2">Günlük Ortalama</div>
                <div class="display-6 fw-bold text-secondary">@Model.AverageAppointmentsPerDay.ToString("F1")</div>
                <small class="text-muted">Randevu/Gün</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="text-muted mb-2">Başarı Oranı</div>
                <div class="display-6 fw-bold text-success">@((Model.CompletedAppointments / Math.Max(1, Model.TotalAppointments) * 100).ToString("F1"))%</div>
                <small class="text-muted">Tamamlanan/Toplam</small>
            </div>
        </div>
    </div>
</div>

<!-- Grafikler -->
<div class="row g-3 mb-4">
    <div class="col-lg-8">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Günlük Randevu Trendi</span>
                <div class="btn-group btn-group-sm" role="group">
                    <button type="button" class="btn btn-outline-primary active" onclick="changeChartPeriod('daily')">Günlük</button>
                    <button type="button" class="btn btn-outline-primary" onclick="changeChartPeriod('weekly')">Haftalık</button>
                    <button type="button" class="btn btn-outline-primary" onclick="changeChartPeriod('monthly')">Aylık</button>
                </div>
            </div>
            <div class="card-body">
                <canvas id="appointmentChart" height="100"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card h-100">
            <div class="card-header">Randevu Durum Dağılımı</div>
            <div class="card-body">
                <canvas id="statusChart" height="200"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Saatlik Dağılım ve Yoğun Saatler -->
<div class="row g-3 mb-4">
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header">Saatlik Randevu Dağılımı</div>
            <div class="card-body">
                <canvas id="hourlyChart" height="100"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header">En Yoğun Saatler</div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-sm align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Saat</th>
                                <th class="text-end">Randevu</th>
                                <th class="text-end">Gelir</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.PeakHours.Count == 0)
                            {
                                <tr>
                                    <td colspan="3" class="text-muted text-center py-3">Veri bulunamadı</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var hour in Model.PeakHours)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-primary">@hour.Hour:00</span>
                                        </td>
                                        <td class="text-end">@hour.Count</td>
                                        <td class="text-end">@hour.Revenue.ToString("N2") ₺</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Detaylı Tablolar -->
<div class="row g-3 mb-4">
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header">Şubelere Göre Randevular</div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-sm align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Şube</th>
                                <th class="text-end">Randevu</th>
                                <th class="text-end">%</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.AppointmentsByBranch.Count == 0)
                            {
                                <tr>
                                    <td colspan="3" class="text-muted text-center py-3">Veri bulunamadı</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var branch in Model.AppointmentsByBranch)
                                {
                                    <tr>
                                        <td>@branch.BranchName</td>
                                        <td class="text-end">@branch.Count</td>
                                        <td class="text-end">
                                            <span class="badge bg-primary">%@branch.Percentage.ToString("F1")</span>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header">Kuaförlere Göre Randevular</div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-sm align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Kuaför</th>
                                <th class="text-end">Randevu</th>
                                <th class="text-end">%</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.AppointmentsByStylist.Count == 0)
                            {
                                <tr>
                                    <td colspan="3" class="text-muted text-center py-3">Veri bulunamadı</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var stylist in Model.AppointmentsByStylist)
                                {
                                    <tr>
                                        <td>@stylist.StylistName</td>
                                        <td class="text-end">@stylist.Count</td>
                                        <td class="text-end">
                                            <span class="badge bg-success">%@stylist.Percentage.ToString("F1")</span>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Performans Kartları -->
<div class="row g-3">
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">Tamamlanma Oranı</div>
            <div class="card-body text-center">
                <div class="display-4 fw-bold text-success mb-2">@((Model.CompletedAppointments / Math.Max(1, Model.TotalAppointments) * 100).ToString("F1"))%</div>
                <div class="text-muted">@Model.CompletedAppointments / @Model.TotalAppointments</div>
                <div class="progress mt-3" style="height: 6px;">
                    <div class="progress-bar bg-success" style="width: @((Model.CompletedAppointments / Math.Max(1, Model.TotalAppointments) * 100).ToString("F1"))%"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">İptal Oranı</div>
            <div class="card-body text-center">
                <div class="display-4 fw-bold text-danger mb-2">@((Model.CancelledAppointments / Math.Max(1, Model.TotalAppointments) * 100).ToString("F1"))%</div>
                <div class="text-muted">@Model.CancelledAppointments / @Model.TotalAppointments</div>
                <div class="progress mt-3" style="height: 6px;">
                    <div class="progress-bar bg-danger" style="width: @((Model.CancelledAppointments / Math.Max(1, Model.TotalAppointments) * 100).ToString("F1"))%"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">Gelmeme Oranı</div>
            <div class="card-body text-center">
                <div class="display-4 fw-bold text-warning mb-2">@((Model.NoShowAppointments / Math.Max(1, Model.TotalAppointments) * 100).ToString("F1"))%</div>
                <div class="text-muted">@Model.NoShowAppointments / @Model.TotalAppointments</div>
                <div class="progress mt-3" style="height: 6px;">
                    <div class="progress-bar bg-warning" style="width: @((Model.NoShowAppointments / Math.Max(1, Model.TotalAppointments) * 100).ToString("F1"))%"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">Günlük Kapasite</div>
            <div class="card-body text-center">
                <div class="display-4 fw-bold text-info mb-2">@Model.AverageAppointmentsPerDay.ToString("F1")</div>
                <div class="text-muted">Randevu/Gün</div>
                <div class="progress mt-3" style="height: 6px;">
                    <div class="progress-bar bg-info" style="width: @((Model.AverageAppointmentsPerDay / 50 * 100).ToString("F1"))%"></div>
                </div>
                <small class="text-muted mt-2 d-block">50 randevu kapasitesi</small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        let appointmentChart, statusChart, hourlyChart;
        let currentPeriod = 'daily';

        $(document).ready(function() {
            initializeCharts();
        });

        function initializeCharts() {
            // Günlük Randevu Grafiği
            const appointmentCtx = document.getElementById('appointmentChart').getContext('2d');
            appointmentChart = new Chart(appointmentCtx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.AppointmentsByDay.Labels)),
                    datasets: [{
                        label: 'Randevu Sayısı',
                        data: @Html.Raw(Json.Serialize(Model.AppointmentsByDay.Values)),
                        borderColor: 'rgb(54, 162, 235)',
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        tension: 0.1,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            // Durum Dağılım Grafiği
            const statusCtx = document.getElementById('statusChart').getContext('2d');
            const statusData = @Html.Raw(Json.Serialize(Model.AppointmentStatusDistribution.Select(s => new { status = s.Status, count = s.Count })));
            
            statusChart = new Chart(statusCtx, {
                type: 'doughnut',
                data: {
                    labels: statusData.map(s => s.status),
                    datasets: [{
                        data: statusData.map(s => s.count),
                        backgroundColor: [
                            'rgba(75, 192, 192, 0.8)',
                            'rgba(255, 205, 86, 0.8)',
                            'rgba(255, 99, 132, 0.8)',
                            'rgba(153, 102, 255, 0.8)',
                            'rgba(54, 162, 235, 0.8)'
                        ],
                        borderColor: [
                            'rgba(75, 192, 192, 1)',
                            'rgba(255, 205, 86, 1)',
                            'rgba(255, 99, 132, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(54, 162, 235, 1)'
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });

            // Saatlik Randevu Grafiği
            const hourlyCtx = document.getElementById('hourlyChart').getContext('2d');
            hourlyChart = new Chart(hourlyCtx, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.AppointmentsByHour.Labels)),
                    datasets: [{
                        label: 'Randevu Sayısı',
                        data: @Html.Raw(Json.Serialize(Model.AppointmentsByHour.Values)),
                        backgroundColor: 'rgba(153, 102, 255, 0.8)',
                        borderColor: 'rgba(153, 102, 255, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }

        function changeChartPeriod(period) {
            currentPeriod = period;
            
            // Aktif buton güncelle
            $('.btn-group button').removeClass('active');
            $(`.btn-group button[onclick="changeChartPeriod('${period}')"]`).addClass('active');
            
            // AJAX ile yeni veri çek
            $.ajax({
                url: '@Url.Action("GetReportData", "Reports")',
                type: 'GET',
                data: {
                    reportType: 'appointments',
                    period: period,
                    from: $('#from').val(),
                    to: $('#to').val()
                },
                success: function(data) {
                    appointmentChart.data.labels = data.labels;
                    appointmentChart.data.datasets[0].data = data.values;
                    appointmentChart.update();
                },
                error: function() {
                    alert('Veri yüklenirken hata oluştu');
                }
            });
        }

        function exportReport(format) {
            const from = $('#from').val();
            const to = $('#to').val();
            
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("ExportReport", "Reports")';
            
            const formatInput = document.createElement('input');
            formatInput.type = 'hidden';
            formatInput.name = 'format';
            formatInput.value = format;
            form.appendChild(formatInput);
            
            const reportTypeInput = document.createElement('input');
            reportTypeInput.type = 'hidden';
            reportTypeInput.name = 'reportType';
            reportTypeInput.value = 'appointments';
            form.appendChild(reportTypeInput);
            
            if (from) {
                const fromInput = document.createElement('input');
                fromInput.type = 'hidden';
                fromInput.name = 'from';
                fromInput.value = from;
                form.appendChild(fromInput);
            }
            
            if (to) {
                const toInput = document.createElement('input');
                toInput.type = 'hidden';
                toInput.name = 'to';
                toInput.value = to;
                form.appendChild(toInput);
            }
            
            document.body.appendChild(form);
            form.submit();
            document.body.removeChild(form);
        }
    </script>
}
