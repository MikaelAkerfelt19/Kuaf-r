@model Kuafor.Web.Models.Admin.Reports.RevenueReport
@{
    ViewData["Title"] = "Gelir Raporu";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h2 class="mb-0">Gelir Raporu</h2>
    <div class="d-flex gap-2">
        <button type="button" class="btn btn-outline-primary" onclick="exportReport('excel')">
            <i class="fas fa-file-excel"></i> Excel
        </button>
        <button type="button" class="btn btn-outline-danger" onclick="exportReport('pdf')">
            <i class="fas fa-file-pdf"></i> PDF
        </button>
        <button type="button" class="btn btn-outline-secondary" onclick="exportReport('csv')">
            <i class="fas fa-file-csv"></i> CSV
        </button>
    </div>
</div>

<!-- Tarih Filtreleri -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="from" class="form-label">Başlangıç Tarihi</label>
                <input type="date" class="form-control" id="from" name="from" value="@ViewBag.FromDate?.ToString("yyyy-MM-dd")">
            </div>
            <div class="col-md-4">
                <label for="to" class="form-label">Bitiş Tarihi</label>
                <input type="date" class="form-control" id="to" name="to" value="@ViewBag.ToDate?.ToString("yyyy-MM-dd")">
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="fas fa-search"></i> Filtrele
                </button>
                <a href="@Url.Action("Revenue")" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Temizle
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Özet Kartları -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="text-muted mb-2">Toplam Gelir</div>
                <div class="display-6 fw-bold text-success">@Model.TotalRevenue.ToString("N2") ₺</div>
                <small class="text-muted">@Model.Period</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="text-muted mb-2">Toplam Randevu</div>
                <div class="display-6 fw-bold text-primary">@Model.TotalAppointments</div>
                <small class="text-muted">Adet</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="text-muted mb-2">Ortalama Bilet Değeri</div>
                <div class="display-6 fw-bold text-info">@Model.AverageTicketValue.ToString("N2") ₺</div>
                <small class="text-muted">Per Randevu</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="text-muted mb-2">Günlük Ortalama</div>
                <div class="display-6 fw-bold text-warning">@((Model.TotalRevenue / Math.Max(1, Model.TotalAppointments)).ToString("N2")) ₺</div>
                <small class="text-muted">Per Gün</small>
            </div>
        </div>
    </div>
</div>

<!-- Grafikler -->
<div class="row g-3 mb-4">
    <div class="col-lg-8">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Günlük Gelir Trendi</span>
                <div class="btn-group btn-group-sm" role="group">
                    <button type="button" class="btn btn-outline-primary active" onclick="changeChartPeriod('daily')">Günlük</button>
                    <button type="button" class="btn btn-outline-primary" onclick="changeChartPeriod('weekly')">Haftalık</button>
                    <button type="button" class="btn btn-outline-primary" onclick="changeChartPeriod('monthly')">Aylık</button>
                </div>
            </div>
            <div class="card-body">
                <canvas id="revenueChart" height="100"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card h-100">
            <div class="card-header">Saatlik Gelir Dağılımı</div>
            <div class="card-body">
                <canvas id="hourlyRevenueChart" height="200"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Detaylı Tablolar -->
<div class="row g-3 mb-4">
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header">Şubelere Göre Gelir</div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-sm align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Şube</th>
                                <th class="text-end">Gelir</th>
                                <th class="text-end">Randevu</th>
                                <th class="text-end">%</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RevenueByBranch.Count == 0)
                            {
                                <tr>
                                    <td colspan="4" class="text-muted text-center py-3">Veri bulunamadı</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var branch in Model.RevenueByBranch)
                                {
                                    <tr>
                                        <td>@branch.BranchName</td>
                                        <td class="text-end">@branch.Revenue.ToString("N2") ₺</td>
                                        <td class="text-end">@branch.AppointmentCount</td>
                                        <td class="text-end">
                                            <span class="badge bg-primary">%@branch.Percentage.ToString("F1")</span>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header">Kuaförlere Göre Gelir</div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-sm align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Kuaför</th>
                                <th class="text-end">Gelir</th>
                                <th class="text-end">Randevu</th>
                                <th class="text-end">Puan</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RevenueByStylist.Count == 0)
                            {
                                <tr>
                                    <td colspan="4" class="text-muted text-center py-3">Veri bulunamadı</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var stylist in Model.RevenueByStylist)
                                {
                                    <tr>
                                        <td>@stylist.StylistName</td>
                                        <td class="text-end">@stylist.Revenue.ToString("N2") ₺</td>
                                        <td class="text-end">@stylist.AppointmentCount</td>
                                        <td class="text-end">
                                            <span class="badge bg-warning">@stylist.AverageRating.ToString("F1")</span>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hizmetlere Göre Gelir -->
<div class="row g-3">
    <div class="col-12">
        <div class="card">
            <div class="card-header">Hizmetlere Göre Gelir Dağılımı</div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-sm align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Hizmet</th>
                                <th class="text-end">Gelir</th>
                                <th class="text-end">Randevu Sayısı</th>
                                <th class="text-end">Yüzde</th>
                                <th class="text-end">Ortalama Fiyat</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RevenueByService.Count == 0)
                            {
                                <tr>
                                    <td colspan="5" class="text-muted text-center py-3">Veri bulunamadı</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var service in Model.RevenueByService)
                                {
                                    <tr>
                                        <td>@service.ServiceName</td>
                                        <td class="text-end">@service.Revenue.ToString("N2") ₺</td>
                                        <td class="text-end">@service.AppointmentCount</td>
                                        <td class="text-end">
                                            <span class="badge bg-success">%@service.Percentage.ToString("F1")</span>
                                        </td>
                                        <td class="text-end">@((service.Revenue / Math.Max(1, service.AppointmentCount)).ToString("N2")) ₺</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        let revenueChart, hourlyRevenueChart;
        let currentPeriod = 'daily';

        $(document).ready(function() {
            initializeCharts();
        });

        function initializeCharts() {
            // Günlük Gelir Grafiği
            const revenueCtx = document.getElementById('revenueChart').getContext('2d');
            revenueChart = new Chart(revenueCtx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.RevenueByDay.Labels)),
                    datasets: [{
                        label: 'Gelir (₺)',
                        data: @Html.Raw(Json.Serialize(Model.RevenueByDay.Values)),
                        borderColor: 'rgb(75, 192, 192)',
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        tension: 0.1,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return value.toLocaleString('tr-TR') + ' ₺';
                                }
                            }
                        }
                    }
                }
            });

            // Saatlik Gelir Grafiği
            const hourlyCtx = document.getElementById('hourlyRevenueChart').getContext('2d');
            hourlyRevenueChart = new Chart(hourlyCtx, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.RevenueByHour.Labels)),
                    datasets: [{
                        label: 'Gelir (₺)',
                        data: @Html.Raw(Json.Serialize(Model.RevenueByHour.Values)),
                        backgroundColor: 'rgba(54, 162, 235, 0.8)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return value.toLocaleString('tr-TR') + ' ₺';
                                }
                            }
                        }
                    }
                }
            });
        }

        function changeChartPeriod(period) {
            currentPeriod = period;
            
            // Aktif buton güncelle
            $('.btn-group button').removeClass('active');
            $(`.btn-group button[onclick="changeChartPeriod('${period}')"]`).addClass('active');
            
            // AJAX ile yeni veri çek
            $.ajax({
                url: '@Url.Action("GetReportData", "Reports")',
                type: 'GET',
                data: {
                    reportType: 'revenue',
                    period: period,
                    from: $('#from').val(),
                    to: $('#to').val()
                },
                success: function(data) {
                    revenueChart.data.labels = data.labels;
                    revenueChart.data.datasets[0].data = data.values;
                    revenueChart.update();
                },
                error: function() {
                    alert('Veri yüklenirken hata oluştu');
                }
            });
        }

        function exportReport(format) {
            const from = $('#from').val();
            const to = $('#to').val();
            
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("ExportReport", "Reports")';
            
            const formatInput = document.createElement('input');
            formatInput.type = 'hidden';
            formatInput.name = 'format';
            formatInput.value = format;
            form.appendChild(formatInput);
            
            const reportTypeInput = document.createElement('input');
            reportTypeInput.type = 'hidden';
            reportTypeInput.name = 'reportType';
            reportTypeInput.value = 'revenue';
            form.appendChild(reportTypeInput);
            
            if (from) {
                const fromInput = document.createElement('input');
                fromInput.type = 'hidden';
                fromInput.name = 'from';
                fromInput.value = from;
                form.appendChild(fromInput);
            }
            
            if (to) {
                const toInput = document.createElement('input');
                toInput.type = 'hidden';
                toInput.name = 'to';
                toInput.value = to;
                form.appendChild(toInput);
            }
            
            document.body.appendChild(form);
            form.submit();
            document.body.removeChild(form);
        }
    </script>
}
