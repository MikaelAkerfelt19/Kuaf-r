@model Kuafor.Web.Models.Admin.Stylists.StylistFormModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="modal fade" id="stylistModal" tabindex="-1" aria-labelledby="stylistModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="stylistForm" method="post" action="/Admin/Stylists/Create">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="stylistModalLabel">Yeni Kuaför</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Ad</label>
                        <input asp-for="Name" class="form-control" placeholder="Örn: Ali Yılmaz" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="row g-3">
                        <div class="col-6">
                            <label asp-for="BranchId" class="form-label">Şube</label>
                            <select asp-for="BranchId" class="form-select" asp-items="Model.BranchOptions">
                                <option value="">Seçiniz…</option>
                            </select>
                            <span asp-validation-for="BranchId" class="text-danger small"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="Rating" class="form-label">Puan (0-5)</label>
                            <input asp-for="Rating" type="number" step="0.1" min="0" max="5" class="form-control" />
                            <span asp-validation-for="Rating" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mt-3">
                        <label asp-for="Bio" class="form-label">Biyografi</label>
                        <textarea asp-for="Bio" rows="3" class="form-control" placeholder="Kısa tanıtım…"></textarea>
                        <span asp-validation-for="Bio" class="text-danger small"></span>
                    </div>

                    <div class="form-check mt-3">
                        <input class="form-check-input" asp-for="IsActive" />
                        <label class="form-check-label" asp-for="IsActive">Aktif</label>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Vazgeç</button>
                    <button type="submit" class="btn btn-primary" id="stylistSubmitBtn">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
