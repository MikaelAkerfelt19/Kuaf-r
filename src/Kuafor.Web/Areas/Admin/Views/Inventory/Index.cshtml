@model Kuafor.Web.Models.Admin.InventoryViewModel
@{
    ViewData["Title"] = "Stok Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.Admin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>Stok Yönetimi</h1>
            <p>Ürün stoklarını yönetin ve takip edin.</p>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.TotalProducts</h4>
                            <p>Toplam Ürün</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-boxes fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.LowStockProducts.Count</h4>
                            <p>Düşük Stok</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.OutOfStockProducts.Count</h4>
                            <p>Stokta Yok</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-times-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.TotalInventoryValue.ToString("C")</h4>
                            <p>Toplam Değer</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-lira-sign fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stok Uyarıları -->
    @if (Model.StockAlerts.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-warning">
                    <h5><i class="fas fa-exclamation-triangle"></i> Stok Uyarıları</h5>
                    <ul class="mb-0">
                        @foreach (var alert in Model.StockAlerts)
                        {
                            <li>@alert.ProductName - @alert.AlertType</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    }

    <!-- Ürün Listesi -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Ürün Listesi</h5>
                    <div class="card-tools">
                        <a href="@Url.Action("Create")" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus"></i> Yeni Ürün
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Products.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Ürün Adı</th>
                                        <th>Kategori</th>
                                        <th>Stok Miktarı</th>
                                        <th>Min. Stok</th>
                                        <th>Fiyat</th>
                                        <th>Durum</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.Products)
                                    {
                                        <tr>
                                            <td>@(product.GetType().GetProperty("Id")?.GetValue(product))</td>
                                            <td>@(product.GetType().GetProperty("Name")?.GetValue(product))</td>
                                            <td>@(product.GetType().GetProperty("Category")?.GetValue(product))</td>
                                            <td>@(product.GetType().GetProperty("StockQuantity")?.GetValue(product))</td>
                                            <td>@(product.GetType().GetProperty("MinimumStock")?.GetValue(product))</td>
                                            <td>@(((decimal?)product.GetType().GetProperty("Price")?.GetValue(product))?.ToString("C"))</td>
                                            <td>
                                                @{
                                                    var stockQuantity = (int?)product.GetType().GetProperty("StockQuantity")?.GetValue(product) ?? 0;
                                                    var minStockLevel = (int?)product.GetType().GetProperty("MinimumStock")?.GetValue(product) ?? 0;
                                                }
                                                @if (stockQuantity == 0)
                                                {
                                                    <span class="badge badge-danger">Stokta Yok</span>
                                                }
                                                else if (stockQuantity <= minStockLevel)
                                                {
                                                    <span class="badge badge-warning">Düşük Stok</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-success">Normal</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", new { id = product.GetType().GetProperty("Id")?.GetValue(product) })" 
                                                   class="btn btn-info btn-sm">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", new { id = product.GetType().GetProperty("Id")?.GetValue(product) })" 
                                                   class="btn btn-warning btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="@Url.Action("Delete", new { id = product.GetType().GetProperty("Id")?.GetValue(product) })" 
                                                   class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-boxes fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Henüz ürün bulunmuyor.</p>
                            <a href="@Url.Action("Create")" class="btn btn-primary">
                                <i class="fas fa-plus"></i> İlk Ürünü Ekle
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>