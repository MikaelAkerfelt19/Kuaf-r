@model IEnumerable<Kuafor.Web.Models.Admin.Stylists.StylistDto>

@{
    ViewData["Title"] = "Kuaför Yönetimi";
    Layout = "_Layout.Admin";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Kuaför Yönetimi</h1>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Kuaför
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kuaför Listesi</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Ad Soyad</th>
                            <th>Şube</th>
                            <th>Puan</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var stylist in Model)
                            {
                                var branches = ViewBag.Branches as List<Kuafor.Web.Models.Admin.Stylists.BranchDto>;
                                var branch = branches?.FirstOrDefault(b => b.Id == stylist.BranchId);
                                <tr>
                                    <td>@stylist.Id</td>
                                    <td>
                                        <strong>@stylist.Name</strong>
                                        @if (!string.IsNullOrEmpty(stylist.Bio))
                                        {
                                            <br><small class="text-muted">@stylist.Bio</small>
                                        }
                                    </td>
                                    <td>
                                        @if (branch != null && stylist.BranchId > 0)
                                        {
                                            <span class="badge badge-info">@branch.Name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Şube atanmamış</span>
                                        }
                                    </td>
                                    <td>
                                        @if (stylist.Rating > 0)
                                        {
                                            <div class="d-flex align-items-center">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= stylist.Rating)
                                                    {
                                                        <i class="fas fa-star text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star text-muted"></i>
                                                    }
                                                }
                                                <span class="ml-2">@stylist.Rating/5</span>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Henüz puanlanmamış</span>
                                        }
                                    </td>
                                    <td>
                                        @if (stylist.IsActive)
                                        {
                                            <span class="badge badge-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Pasif</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Details", new { id = stylist.Id })" 
                                               class="btn btn-sm btn-info" title="Detaylar">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", new { id = stylist.Id })" 
                                               class="btn btn-sm btn-warning" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger" title="Sil"
                                                    onclick="deleteStylist(@stylist.Id)">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                                    <br>
                                    <strong>Henüz kuaför eklenmemiş</strong>
                                    <br>
                                    <small>İlk kuaförü eklemek için "Yeni Kuaför" butonuna tıklayın.</small>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Silme Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Kuaför Sil</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bu kuaförü silmek istediğinizden emin misiniz?</p>
                <p class="text-danger"><strong>Bu işlem geri alınamaz!</strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteStylist(id) {
            if (confirm('Bu kuaförü silmek istediğinizden emin misiniz?')) {
                // Doğru URL'ye yönlendir
                window.location.href = '/Admin/Stylists/Delete/' + id;
            }
        }

        $(document).ready(function() {
            $('#dataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json'
                }
            });
        });
    </script>
}
