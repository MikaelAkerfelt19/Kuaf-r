@model Kuafor.Web.Models.Admin.Services.ServicesIndexViewModel
@{ 
    ViewData["Title"] = "Hizmetler";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Hizmetler</h2>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="fas fa-plus"></i> Yeni Hizmet
    </a>
</div>

@if (TempData["Success"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ok
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
    </div>
}
@if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @err
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
    </div>
}

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:80px">#</th>
                        <th>Ad</th>
                        <th style="width:160px">Kuaför</th>
                        <th style="width:140px">Kategori</th>
                        <th style="width:140px">Süre (dk)</th>
                        <th style="width:140px">Fiyat (₺)</th>
                        <th style="width:120px">Durum</th>
                        <th style="width:160px" class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Services.Count == 0)
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                <i class="fas fa-info-circle fa-2x mb-3"></i>
                                <br>
                                <strong>Henüz hizmet eklenmemiş</strong>
                                <br>
                                <small>İlk hizmeti eklemek için "Yeni Hizmet" butonuna tıklayın.</small>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var s in Model.Services)
                        {
                            <tr>
                                <td>@s.Id</td>
                                <td>@s.Name</td>
                                <td>
                                    @if (s.StylistId > 0)
                                    {
                                        <span class="badge bg-secondary">@s.StylistName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Atanmadı</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(s.Category))
                                    {
                                        var categoryName = s.Category switch
                                        {
                                            "haircut" => "Saç Kesimi",
                                            "coloring" => "Renklendirme",
                                            "styling" => "Şekillendirme",
                                            "beard" => "Sakal Traşı",
                                            "care" => "Bakım & Spa",
                                            "manicure" => "Manikür & Pedikür",
                                            "other" => "Diğer",
                                            _ => s.Category
                                        };
                                        <span class="badge bg-info">@categoryName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Kategori yok</span>
                                    }
                                </td>
                                <td>@s.DurationMin</td>
                                <td>@s.Price.ToString("0.##")</td>
                                <td>
                                    @if (s.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <button type="button" class="btn btn-sm btn-outline-primary me-1" data-bs-toggle="modal"
                                        data-bs-target="#serviceModal" data-mode="edit" data-id="@s.Id" data-name="@s.Name"
                                        data-duration="@s.DurationMin" data-price="@s.Price" data-category="@s.Category" data-stylist="@s.StylistId"
                                        data-active="@(s.IsActive ? "true" : "false")">
                                        Düzenle
                                    </button>

                                    <form method="post" action="/Admin/Services/Delete" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@s.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                            Sil
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@await Html.PartialAsync("Partials/_ServiceModal", new Kuafor.Web.Models.Admin.Services.ServiceFormModel())

@section Scripts {
    <script src="~/js/admin-services.js" asp-append-version="true"></script>
}
