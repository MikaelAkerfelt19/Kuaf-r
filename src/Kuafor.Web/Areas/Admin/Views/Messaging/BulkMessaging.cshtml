@model Kuafor.Web.Areas.Admin.Models.BulkMessagingViewModel
@{
    ViewData["Title"] = "Toplu Mesaj Gönderme";
    Layout = "_Layout.Admin";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Toplu Mesaj Gönderme</h3>
                    <div class="card-tools">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">Geri Dön</a>
                    </div>
                </div>
                <form asp-action="SendBulkMessage" method="post">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Mesaj Türü</label>
                                    <select asp-for="MessageType" class="form-control">
                                        <option value="SMS">SMS</option>
                                        <option value="WhatsApp">WhatsApp</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Mesaj İçeriği</label>
                                    <textarea asp-for="Message" class="form-control" rows="5" required></textarea>
                                    <small class="text-muted">Maksimum 160 karakter (SMS için)</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Müşteri Seçimi</label>
                                    <div style="max-height: 300px; overflow-y: auto; border: 1px solid #ddd; padding: 10px;">
                                        @if (Model.Customers != null)
                                        {
                                            @foreach (var customer in Model.Customers)
                                            {
                                                <div class="form-check">
                                                    <input type="checkbox" name="SelectedCustomerIds" value="@customer.Id" class="form-check-input" id="customer_@customer.Id">
                                                    <label class="form-check-label" for="customer_@customer.Id">
                                                        @customer.FullName (@customer.Phone)
                                                    </label>
                                                </div>
                                            }
                                        }
                                    </div>
                                    <button type="button" class="btn btn-sm btn-primary mt-2" onclick="selectAll()">Tümünü Seç</button>
                                    <button type="button" class="btn btn-sm btn-secondary mt-2" onclick="deselectAll()">Tümünü Temizle</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-success">Mesaj Gönder</button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function selectAll() {
    document.querySelectorAll('input[name="SelectedCustomerIds"]').forEach(cb => cb.checked = true);
}

function deselectAll() {
    document.querySelectorAll('input[name="SelectedCustomerIds"]').forEach(cb => cb.checked = false);
}
</script>
