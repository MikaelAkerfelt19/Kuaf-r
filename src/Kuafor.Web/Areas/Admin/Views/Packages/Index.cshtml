@model IEnumerable<Kuafor.Web.Models.Entities.Package>

@{
    ViewData["Title"] = "Paket Yönetimi";
    Layout = "_Layout.Admin";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Paket Yönetimi</h1>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Paket
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Paket Listesi</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Paket Adı</th>
                            <th>Toplam Fiyat</th>
                            <th>Seans Sayısı</th>
                            <th>Birim Fiyat</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var package in Model)
                            {
                                <tr>
                                    <td>@package.Id</td>
                                    <td><strong>@package.Name</strong></td>
                                    <td>@package.TotalPrice.ToString("C")</td>
                                    <td>@package.SessionCount</td>
                                    <td>@package.SessionUnitPrice.ToString("C")</td>
                                    <td>
                                        <span class="badge @(package.IsActive ? "bg-success" : "bg-secondary")">
                                            @(package.IsActive ? "Aktif" : "Pasif")
                                        </span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", new { id = package.Id })" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i> Düzenle
                                        </a>
                                        <a href="@Url.Action("Sales", new { id = package.Id })" class="btn btn-sm btn-info">
                                            <i class="fas fa-chart-line"></i> Satışlar
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-2x mb-2"></i><br>
                                    Henüz paket eklenmemiş
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
