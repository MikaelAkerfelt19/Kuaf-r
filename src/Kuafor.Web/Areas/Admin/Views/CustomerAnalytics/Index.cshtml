@model Kuafor.Web.Models.Admin.CustomerAnalyticsViewModel
@{
    ViewData["Title"] = "Müşteri Analitikleri";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.Admin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>Müşteri Analitikleri</h1>
            <p>Müşteri verilerini analiz edin ve raporları görüntüleyin.</p>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.TotalCustomers</h4>
                            <p>Toplam Müşteri</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.NewCustomersThisMonth</h4>
                            <p>Bu Ay Yeni Müşteri</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-plus fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.ActiveCustomers</h4>
                            <p>Aktif Müşteri</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-check fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.TotalAppointments</h4>
                            <p>Toplam Randevu</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-calendar fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Müşteri Listesi -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Müşteri Listesi</h5>
                    <div class="card-tools">
                        <a href="@Url.Action("Export")" class="btn btn-success btn-sm">
                            <i class="fas fa-download"></i> Dışa Aktar
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.CustomerList.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Ad Soyad</th>
                                        <th>E-posta</th>
                                        <th>Telefon</th>
                                        <th>Kayıt Tarihi</th>
                                        <th>Durum</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var customer in Model.CustomerList)
                                    {
                                        <tr>
                                            <td>@(customer.GetType().GetProperty("Id")?.GetValue(customer))</td>
                                            <td>@(customer.GetType().GetProperty("FirstName")?.GetValue(customer)) @(customer.GetType().GetProperty("LastName")?.GetValue(customer))</td>
                                            <td>@(customer.GetType().GetProperty("Email")?.GetValue(customer))</td>
                                            <td>@(customer.GetType().GetProperty("PhoneNumber")?.GetValue(customer))</td>
                                            <td>@(((DateTime?)customer.GetType().GetProperty("CreatedAt")?.GetValue(customer))?.ToString("dd.MM.yyyy"))</td>
                                            <td>
                                                @if ((bool?)customer.GetType().GetProperty("IsActive")?.GetValue(customer) == true)
                                                {
                                                    <span class="badge badge-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Pasif</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", new { id = customer.GetType().GetProperty("Id")?.GetValue(customer) })" 
                                                   class="btn btn-info btn-sm">
                                                    <i class="fas fa-eye"></i> Detay
                                                </a>
                                                <a href="@Url.Action("Delete", new { id = customer.GetType().GetProperty("Id")?.GetValue(customer) })" 
                                                   class="btn btn-danger btn-sm" 
                                                   onclick="return confirm('Bu müşteriyi silmek istediğinizden emin misiniz?')">
                                                    <i class="fas fa-trash"></i> Sil
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Henüz müşteri bulunmuyor.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>