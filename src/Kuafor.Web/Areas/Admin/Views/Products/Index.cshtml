@model IEnumerable<Kuafor.Web.Models.Entities.Product>

@{
    ViewData["Title"] = "Ürün Yönetimi";
    Layout = "_Layout.Admin";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Ürün Yönetimi</h1>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Ürün
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Ürün Listesi</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Ürün Adı</th>
                            <th>Kategori</th>
                            <th>Fiyat</th>
                            <th>Stok</th>
                            <th>Komisyon %</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>@product.Id</td>
                                    <td>
                                        <strong>@product.Name</strong>
                                        @if (!string.IsNullOrEmpty(product.Description))
                                        {
                                            <br><small class="text-muted">@product.Description</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@product.Category</span>
                                    </td>
                                    <td>@product.Price.ToString("C")</td>
                                    <td>
                                        <span class="badge @(product.StockQuantity > 10 ? "bg-success" : product.StockQuantity > 0 ? "bg-warning" : "bg-danger")">
                                            @product.StockQuantity
                                        </span>
                                    </td>
                                    <td>@product.CommissionPercentage%</td>
                                    <td>
                                        <span class="badge @(product.IsActive ? "bg-success" : "bg-secondary")">
                                            @(product.IsActive ? "Aktif" : "Pasif")
                                        </span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", new { id = product.Id })" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i> Düzenle
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger" onclick="deleteProduct(@product.Id)">
                                            <i class="fas fa-trash"></i> Sil
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-4">
                                    <i class="fas fa-box fa-2x mb-2"></i><br>
                                    Henüz ürün eklenmemiş
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
function deleteProduct(id) {
    if (confirm('Bu ürünü silmek istediğinizden emin misiniz?')) {
        fetch('/Admin/Products/Delete/' + id, {
            method: 'POST',
            headers: {
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Ürün silinemedi: ' + data.message);
            }
        });
    }
}
</script>
