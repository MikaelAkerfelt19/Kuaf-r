@model Kuafor.Web.Models.Admin.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Paneli";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.Admin.cshtml";
}

<div class="admin-content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Admin Paneli</h1>
        <div class="text-muted">
            <i class="bi bi-calendar3"></i>
            @DateTime.Now.ToString("dd MMMM yyyy, dddd")
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.TotalAppointments</h4>
                            <p class="card-text">Toplam Randevu</p>
                        </div>
                        <div class="fs-1">
                            <i class="bi bi-calendar-check"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.TodayAppointments</h4>
                            <p class="card-text">Bugünkü Randevular</p>
                        </div>
                        <div class="fs-1">
                            <i class="bi bi-calendar-day"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.ActiveStylists</h4>
                            <p class="card-text">Aktif Kuaför</p>
                        </div>
                        <div class="fs-1">
                            <i class="bi bi-person-check"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.TotalRevenue.ToString("C0")</h4>
                            <p class="card-text">Toplam Gelir</p>
                        </div>
                        <div class="fs-1">
                            <i class="bi bi-currency-dollar"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Haftalık İstatistikler -->
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Bu Hafta</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <h3 class="text-primary">@Model.WeekAppointments</h3>
                            <p class="text-muted">Randevu</p>
                        </div>
                        <div class="col-6">
                            <h3 class="text-success">@Model.WeekRevenue.ToString("C0")</h3>
                            <p class="text-muted">Gelir</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Bugün</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <h3 class="text-primary">@Model.TodayAppointments</h3>
                            <p class="text-muted">Randevu</p>
                        </div>
                        <div class="col-6">
                            <h3 class="text-success">@Model.TodayRevenue.ToString("C0")</h3>
                            <p class="text-muted">Gelir</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı Erişim -->
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-plus fs-1 text-primary mb-3"></i>
                    <h5>Randevu Yönetimi</h5>
                    <p class="text-muted">Randevuları görüntüle ve yönet</p>
                    <a href="@Url.Action("Index", "Appointments", new { area = "Admin" })" class="btn btn-primary">
                        Randevulara Git
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-person-check fs-1 text-success mb-3"></i>
                    <h5>Kuaför Yönetimi</h5>
                    <p class="text-muted">Kuaförleri görüntüle ve yönet</p>
                    <a href="@Url.Action("Index", "Stylists", new { area = "Admin" })" class="btn btn-success">
                        Kuaförlere Git
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-graph-up fs-1 text-info mb-3"></i>
                    <h5>Raporlar</h5>
                    <p class="text-muted">Detaylı raporları görüntüle</p>
                    <a href="@Url.Action("Index", "Reports", new { area = "Admin" })" class="btn btn-info">
                        Raporlara Git
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>