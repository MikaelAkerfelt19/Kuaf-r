@model AppointmentDetailViewModel
@{
    ViewData["Title"] = "Randevu Detayı";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Randevu Detayı</h2>
        <a asp-area="Stylist" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Panele Dön
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">Randevu #@Model.Id</h5>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">Randevu Bilgileri</h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="fw-bold">Durum:</label>
                                <span class="badge @Model.StatusBadgeClass ms-2">@Model.Status</span>
                            </div>
                            <div class="mb-3">
                                <label class="fw-bold">Tarih:</label>
                                <span>@Model.FormattedDate</span>
                            </div>
                            <div class="mb-3">
                                <label class="fw-bold">Saat:</label>
                                <span>@Model.FormattedTime - @Model.FormattedEndTime</span>
                            </div>
                            <div class="mb-3">
                                <label class="fw-bold">Süre:</label>
                                <span>@Model.Duration dakika</span>
                            </div>
                            <div class="mb-3">
                                <label class="fw-bold">Hizmet:</label>
                                <span>@Model.ServiceName</span>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Notes))
                            {
                                <div class="mb-3">
                                    <label class="fw-bold">Notlar:</label>
                                    <p class="mt-1">@Model.Notes</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">Müşteri Bilgileri</h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="fw-bold">Ad Soyad:</label>
                                <span>@Model.CustomerName</span>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.CustomerPhone))
                            {
                                <div class="mb-3">
                                    <label class="fw-bold">Telefon:</label>
                                    <span>@Model.CustomerPhone</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.CustomerEmail))
                            {
                                <div class="mb-3">
                                    <label class="fw-bold">E-posta:</label>
                                    <span>@Model.CustomerEmail</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                @if (Model.Status?.ToLower() == "scheduled")
                {
                    <div class="d-flex gap-2">
                        <form asp-area="Stylist" asp-controller="Appointments" asp-action="Complete" asp-route-id="@Model.Id" method="post">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Randevuyu Tamamla
                            </button>
                        </form>

                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#cancelModal">
                            <i class="bi bi-x-circle"></i> Randevuyu İptal Et
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- İptal Modalı -->
<div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-area="Stylist" asp-controller="Appointments" asp-action="Cancel" asp-route-id="@Model.Id" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="cancelModalLabel">Randevu İptali</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    <p>Bu randevuyu iptal etmek istediğinizden emin misiniz?</p>
                    <div class="mb-3">
                        <label for="reason" class="form-label">İptal Nedeni</label>
                        <textarea class="form-control" id="reason" name="reason" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                    <button type="submit" class="btn btn-danger">İptal Et</button>
                </div>
            </form>
        </div>
    </div>
</div>