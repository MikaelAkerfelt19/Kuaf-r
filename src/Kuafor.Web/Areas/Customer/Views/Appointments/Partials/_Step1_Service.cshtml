                    <div class="mt-auto">
                        <a class="btn btn-primary" asp-area="Customer" asp-controller="Appointments" asp-action="New" asp-route-serviceId="@s.Id">Se√ß ve Devam Et</a>
                    </div>
                </div>
            </div>
