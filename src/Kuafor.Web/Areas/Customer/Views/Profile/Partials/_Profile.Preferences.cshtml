@model Kuafor.Web.Models.Profile.PreferencesViewModel

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <h5 class="card-title mb-3">Randevu Tercihleri</h5>

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Tercih Edilen Şube</label>
                <select class="form-select" asp-for="PreferredBranch">
                    @foreach (var b in Model.BranchOptions)
                    {
                        @if (Model.PreferredBranch == b) { <option value="@b" selected>@b</option> } else { <option value="@b">@b</option> }
                    }
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label">Tercih Edilen Kuaför</label>
                <select class="form-select" asp-for="PreferredStylist">
                    @foreach (var s in Model.StylistOptions)
                    {
                        @if (Model.PreferredStylist == s) { <option value="@s" selected>@s</option> } else { <option value="@s">@s</option> }
                    }
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label">Tercih Edilen Zaman Aralığı</label>
                <select class="form-select" asp-for="PreferredTimeBand">
                    @foreach (var t in Model.TimeBandOptions)
                    {
                        @if (Model.PreferredTimeBand == t) { <option value="@t" selected>@t</option> } else { <option value="@t">@t</option> }
                    }
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label">Esneklik (± dakika)</label>
                <input asp-for="FlexMinutes" type="number" min="0" max="30" step="5" class="form-control" />
                <div class="form-text">Randevu saatinden önce/sonra kabul edeceğin tolerans.</div>
            </div>
        </div>

        <hr />

        <h6 class="mb-2">Hızlı "yenile" (geçmişten)</h6>
        @if (Model.QuickRebooks.Count == 0) { <div class="text-muted">Öneri yok. Geçmiş randevularına göre otomatik çıkarılacak.</div> }
        else
        {
            <div class="row g-2">
                @foreach (var q in Model.QuickRebooks)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="d-flex align-items-center justify-content-between border rounded p-2">
                            <span class="small">@q.Label</span>
                            <a class="btn btn-sm btn-outline-primary"
                                asp-area="Customer" asp-controller="Appointments" 
                                asp-action="New" asp-route-serviceId="@q.ServiceId" asp-route-stylistId="@q.StylistId">
                                Yenile
                            </a>
                        </div>
                    </div>
                }
            </div>
        }

        <div class="mt-3">
            <button class="btn btn-primary" type="button" onclick="window.profilePrefsSave()">Kaydet</button>
        </div>
    </div>
</div>