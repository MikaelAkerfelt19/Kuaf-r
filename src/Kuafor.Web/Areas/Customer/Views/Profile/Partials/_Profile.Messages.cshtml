@model Kuafor.Web.Models.Profile.MessagesViewModel

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
            <i class="fas fa-envelope me-2"></i>Mesajlarım
        </h5>
        <span class="badge bg-primary">@Model.Messages.Count mesaj</span>
    </div>
    <div class="card-body">
        @if (Model.Messages.Any())
        {
            <div class="list-group list-group-flush">
                @foreach (var message in Model.Messages)
                {
                    <div class="list-group-item border-0 px-0">
                        <div class="d-flex w-100 justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <div class="d-flex align-items-center mb-2">
                                    <span class="badge bg-@(message.Type.ToLower() == "whatsapp" ? "success" : "primary") me-2">
                                        <i class="fab fa-@(message.Type.ToLower() == "whatsapp" ? "whatsapp" : "sms")"></i>
                                        @message.Type
                                    </span>
                                    <span class="badge bg-@(message.Status == "Sent" ? "success" : message.Status == "Failed" ? "danger" : "warning")">
                                        @switch (message.Status)
                                        {
                                            case "Sent": <text>Gönderildi</text>; break;
                                            case "Failed": <text>Başarısız</text>; break;
                                            case "Delivered": <text>Teslim Edildi</text>; break;
                                            case "Read": <text>Okundu</text>; break;
                                            default: <text>@message.Status</text>; break;
                                        }
                                    </span>
                                </div>
                                <p class="mb-2 text-dark">@message.Content</p>
                                <small class="text-muted">
                                    <i class="fas fa-clock me-1"></i>
                                    @if (message.SentAt.HasValue)
                                    {
                                        <text>Gönderildi: @message.SentAt.Value.ToString("dd.MM.yyyy HH:mm")</text>
                                    }
                                    else
                                    {
                                        <text>Oluşturuldu: @message.CreatedAt.ToString("dd.MM.yyyy HH:mm")</text>
                                    }
                                </small>
                            </div>
                        </div>
                    </div>
                    @if (message != Model.Messages.Last())
                    {
                        <hr class="my-2">
                    }
                }
            </div>
        }
        else
        {
            <div class="text-center text-muted py-5">
                <i class="fas fa-envelope-open-text fa-4x mb-3 text-muted"></i>
                <h5 class="text-muted">Henüz mesajınız bulunmuyor</h5>
                <p class="text-muted">Size gönderilen mesajlar burada görünecek.</p>
            </div>
        }
    </div>
    @if (Model.Messages.Any())
    {
        <div class="card-footer bg-light">
            <small class="text-muted">
                <i class="fas fa-info-circle me-1"></i>
                Mesajlarınız güvenli bir şekilde saklanmaktadır. En son mesajlar üstte görüntülenir.
            </small>
        </div>
    }
</div>
