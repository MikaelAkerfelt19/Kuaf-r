@model Kuafor.Web.Models.Customer.CouponsViewModel

@{
    ViewData["Title"] = "Kuponlarım";
}

<div class="container-fluid p-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Kuponlarım</h2>
            
            <!-- Aktif Kuponlar -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-ticket-perforated text-success"></i>
                        Aktif Kuponlar (@Model.Active.Count)
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Active.Any())
                    {
                        <div class="row g-3">
                            @foreach (var coupon in Model.Active)
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="card border-success h-100">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h6 class="card-title text-success mb-0">@coupon.Title</h6>
                                                <span class="badge bg-success">@(coupon.DiscountType == "Percent" ? $"%{coupon.Amount}" : $"₺{coupon.Amount}")</span>
                                            </div>
                                            <p class="card-text small text-muted mb-2">@(coupon.DiscountType == "Percent" ? $"%{coupon.Amount} indirim" : $"₺{coupon.Amount} indirim")</p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <code class="text-primary">@coupon.Code</code>
                                                @if (coupon.ExpiresAt.HasValue)
                                                {
                                                    <small class="text-muted">@coupon.ExpiresAt.Value.ToString("dd.MM.yyyy")</small>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-ticket-perforated display-4"></i>
                            <p class="mt-2">Henüz aktif kuponunuz bulunmuyor.</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Süresi Dolmuş Kuponlar -->
            @if (Model.Expired.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-ticket-perforated text-secondary"></i>
                            Süresi Dolmuş Kuponlar (@Model.Expired.Count)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @foreach (var coupon in Model.Expired)
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="card border-secondary h-100 opacity-75">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h6 class="card-title text-secondary mb-0">@coupon.Title</h6>
                                                <span class="badge bg-secondary">@(coupon.DiscountType == "Percent" ? $"%{coupon.Amount}" : $"₺{coupon.Amount}")</span>
                                            </div>
                                            <p class="card-text small text-muted mb-2">@(coupon.DiscountType == "Percent" ? $"%{coupon.Amount} indirim" : $"₺{coupon.Amount} indirim")</p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <code class="text-secondary">@coupon.Code</code>
                                                @if (coupon.ExpiresAt.HasValue)
                                                {
                                                    <small class="text-muted">@coupon.ExpiresAt.Value.ToString("dd.MM.yyyy")</small>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
.opacity-75 {
    opacity: 0.75;
}
</style>