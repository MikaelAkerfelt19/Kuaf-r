@model IEnumerable<Kuafor.Web.Models.Entities.Stylist>

@{
    ViewData["Title"] = "Kuaförlerimiz";
}

<div class="container mt-4">
    <h2>Kuaförlerimiz</h2>
    
    <div class="row">
        @foreach (var stylist in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@stylist.FirstName @stylist.LastName</h5>
                        <p class="card-text">@stylist.Bio</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="rating">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= stylist.Rating)
                                    {
                                        <i class="fas fa-star text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-star text-muted"></i>
                                    }
                                }
                                <span class="ms-2">@stylist.Rating/5</span>
                            </div>
                            <a href="@Url.Action("Details", new { id = stylist.Id })" class="btn btn-primary btn-sm">Detaylar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
